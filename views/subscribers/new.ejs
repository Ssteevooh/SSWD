<h2>Subscribe to web page</h2>

<div class="data-form">
    <form class="form-signin" action="/subscribers/create" method="POST">
      <h2 class="form-signin-heading">Create a new subscriber:</h2>
      <label for="inputName">Name <b class="d-inline text-danger">*</b> </label>
      <input type="text" name="name" id="inputName" class="form-control" placeholder="Name" autofocus>
      <label for="inputEmail">Email address <b class="d-inline text-danger">*</b> </label>
      <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address" required>
      <label for="inputZipCode">Zip Code <b class="d-inline text-danger">*</b> </label>
      <input type="text" name="zipCode" id="inputZipCode" pattern="\d*" class="form-control" placeholder="Zip Code" required>
      <label for="inputVip">Vip</label>
      <input type="text" name="vip" id="InputVip" class="form-control" placeholder="Key for VIP access">
      <b class="d-inline text-danger">* Fields are required</b>
      <br />
      <br />
      <button class="btn btn-lg btn-danger btn-block" type="submit">Create</button>
    </form>
  </div>