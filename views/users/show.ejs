<div class="center" style="margin-left: 5vw;">
  <a class="btn btn-danger w-10" href="/users">Back</a>
</div>

<h1 style="margin-left: 5vw;" >User Data for <%= user.fullname %> </h1>
</br>
  <table class="table" style="width: 90vw; margin-left: 5vw; box-shadow: 0 0 10px #00000070;">
    <tr>
      <th>Name</th>
      <td>
        <%= user.fullname %>
      </td>
    </tr>
    <tr>
      <th>Email</th>
      <td>
        <%= user.email %>
      </td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>
          <%= user.phone %>
        </td>
      </tr>
    <tr>
      <th>Zip Code</th>
      <td>
        <%= user.zipCode %>
      </td>
    </tr>
    <tr>
      <th>Password</th>
      <td >
        <%= "********" %>
      </td>
    </tr>
  </table>
  
  <% if (user.email === currentUser.email) { %>
    <div style="margin-left: 5vw;">
      <a
        class="btn btn-info w-10"
        class="button"
        href="<%=`/users/${user._id}/edit`%>">
        Edit
      </a>
      <a
        class="btn btn-danger w-10"
        class="button"
        href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')">
        Delete
      </a>
    </div>
  <% } %>
  
  
